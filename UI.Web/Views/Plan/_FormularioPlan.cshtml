 @model UI.Web.Models.PlanViewModel
 @{
    var accion = Model.Id == 0 ? "Nuevo" : "Editar"; 
}
<form asp-action="@accion">
  <div class="mb-3">
    <label for="@nameof(Model.Descripcion)" class="form-label">Descripción</label>
    <input type="text" class="form-control" id="@nameof(Model.Descripcion)">
  </div>
  <div class="mb-3">
                   <label asp-for="EspecialidadId" class="control-label"></label>
                <select asp-for="EspecialidadId" class="form-control" asp-items="@(new SelectList(Model.Especialidades, "Id", "Descripcion"))">
                    <option value="">Seleccione una especialidad</option>
                </select>
                <span asp-validation-for="EspecialidadId" class="text-danger"></span>
  </div>

            <div class="container">
                <div class="row">
                                <div class="col-lg-12 d-flex justify-content-between align-items-center">
                            <div class="mb-3">
                <input type="submit" value="@accion" class="btn btn-success" />
                <a class="btn btn-danger" asp-action="Index">Volver a planes</a>
            </div>
            </div>
                </div>
            </div>
</form>