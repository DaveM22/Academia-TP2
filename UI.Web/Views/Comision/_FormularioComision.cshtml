@model UI.Web.Models.ComisionViewModel

@{
    var accion = Model.Id == 0 ? "Nuevo" : "Editar"; 
}

<h3>@accion comisión</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@accion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="AnioEspecialidad" class="form-label"></label>
                <input asp-for="AnioEspecialidad" class="form-control form-control-sm" />
                <span asp-validation-for="AnioEspecialidad" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <input asp-for="Descripcion" class="form-control form-control-sm" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PlanId" class="form-label"></label>
                <select asp-for="PlanId" class="form-control form-control-sm" asp-items="@(new SelectList(Model.Planes, "Id", "Descripcion"))">
                    <option value="">Seleccione una materia</option>
                </select>
                <span asp-validation-for="PlanId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="@accion" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger">Volver a comisiones</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}