@using Business.Util
@model TipoPersonaEnum
    @{
    TipoPersonaEnum persona = @Model;
    string personaText = string.Empty;
    string plural = string.Empty;
    }
    @switch(Model)
    {
       case TipoPersonaEnum.ALUMNO:
            personaText = "alumno";
        plural = "Alumnos";
        break;
       case TipoPersonaEnum.PROFESOR:
            personaText = "profesor";
        plural = "Profesores";
        break;
    default:
            break;
     }
<div class="row mt-4">
          <div class="col-lg-12 d-flex justify-content-between align-items-center">
            <div>
                <h2>@plural</h2>
            </div>
           <div>
           <a asp-controller="Persona" asp-action="Nuevo" class="btn btn-success" asp-route-tipopersona="@Model">Crear @personaText</a>
           </div>
   </div>
</div>