@model PlanViewModel
@{
    ViewData["Title"] = "Borrar";
}

@if (TempData.ContainsKey("Error"))
{
    <div class="alert alert-danger" role="alert">
        @TempData["Error"]
    </div>
}
<div class="card bg-secondary p-2">
    <h1 class="text-center text-white">Borrar plan</h1>

    <h3 class="text-center text-white">¿Esta seguro de borrar el siguiente plan?</h3>

    <div class="row">

        <form asp-action="Borrar">

            <div class="row text-white">
                <div class="col-md-4 col-12 col-lg-6 mx-auto">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                            <dt class="col-lg-6">
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </dt>
                            <dd class="col-lg-6">
                                @Html.DisplayFor(model => model.Descripcion)
                            </dd>
                            <dt class="col-lg-6">
                                @Html.DisplayNameFor(model => model.EspecialidadDescripcion)
                            </dt>
                            <dd class="col-lg-6">
                                @Html.DisplayFor(model => model.EspecialidadDescripcion)
                            </dd>
      
                    </div>
                    <div class="row">


                        <div class="col-md-6 col-lg-6">

                            <input type="submit" value="Borrar" class="btn btn-success w-100 mb-3" /> 
                        </div>
                        <div class="col-md-6 col-lg-6">
                            <a asp-action="Index" class="btn btn-primary btn btn-danger w-100 mb-3">Volver a planes</a>
                        </div>

                    </div>

                </div>
            </div>

        </form>


    </div>
</div>
