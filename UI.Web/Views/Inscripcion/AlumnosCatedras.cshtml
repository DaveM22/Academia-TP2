@using Business.Util
@model IEnumerable<UI.Web.Models.PersonaViewModel>

@{
    ViewData["Title"] = "Index";
}

@{
    var tipo = TipoPersonaEnum.ALUMNO;
}
<h2 class="display-6 text-center">Alumnos</h2>

<div class="container-fluid">

    <table id="table" class="table table-dark table-striped  nowrap " style="width:100%;">
        <thead>
            <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Legajo)
                </th class="text-center">
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-wrap">
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Legajo)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td class="text-center">
                        <a class="btn btn-primary btn-sm" title="Editar" asp-action="MisCatedras" asp-route-id="@item.Id"><i class="fa fa-pencil fa-sm" aria-hidden="true"></i>Catedras</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            let table = new DataTable('#table', {
                language: {
                    "emptyTable": "No existen alumnos inscriptos",
                    "search": "Buscar: ",
                    "zeroRecords": "No se han encontrado alumnos en la busqueda",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                },
                responsive: true,
                pageLength: 5,
                lengthChange: false,
                info: false,
            });
        });
    </script>

}