@model UI.Web.Models.MateriaModel

@{
    ViewData["Title"] = "Borrar";
}

@if (TempData.ContainsKey("Error"))
{
    <div class="alert alert-danger" role="alert">
        @TempData["Error"]
    </div>
}
                <div class="card bg-secondary p-2">
    <h1 class="text-center">Borrar Materia</h1>

    <h3 class="text-center">¿Esta seguro de borrar la siguiente materia?:</h3>
    <div class="row">
        
        <form asp-action="Borrar">

            <div class="row">
                <div class="col-md-4 col-12 col-lg-6 mx-auto">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Descripcion)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.HSSemanales)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.HSSemanales)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.HSTotales)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.HSTotales)
                                </dd>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-lg-6">
                            <input type="submit" value="Borrar" class="btn btn-success w-100 mb-3" />
                            </div>
                            <div class="col-md-6 col-lg-6">
                            <a asp-action="Index" asp-route-id="@Model.PlanId" class="btn btn-primary btn btn-danger w-100 mb-3">Cancelar</a>
                            </div>

                        </div>
      
                </div>
            </div>
  
        </form>
        

</div>
</div