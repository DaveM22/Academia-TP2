

@model UI.Web.Models.MateriaViewModel
 <form id="formMateria" asp-action="_MateriaFormularioViewModel">
<div class="modal fade" style="color: black" id="materiaForm" tabindex="-1" aria-labelledby="materiaForm" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="materiaForm">Seleccione una especialidad</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row">
            <div  id="formulario"  class="row container">
                <div class="col-md-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-md-6 mx-auto">
                        <label asp-for="Descripcion" class="control-label"></label>
                        <input asp-for="Descripcion" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6 mx-auto">
                        <label asp-for="HSSemanales" class="control-label"></label>
                        <input asp-for="HSSemanales" class="form-control" />
                        <span asp-validation-for="HSSemanales" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6 mx-auto">
                        <label asp-for="HSTotales" class="control-label"></label>
                        <input asp-for="HSTotales" class="form-control" />
                        <span asp-validation-for="HSTotales" class="text-danger"></span>
                    </div>
@*                    <div class="form-group">
                        <input id="submitMateria" type="submit" value="Create" class="btn btn-primary" />
                    </div>*@

            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
          <button id="submitMateria" type="submit" class="btn btn-primary">Guardar</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>
</form>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
