@model IEnumerable<UI.Web.Models.EspecialidadViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

<header-index action="Nuevo" title="Especialidades" button-text="Crear especialidad"></header-index>

<table id="table" class="table table-dark text-dark">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.HiddenFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Editar", new { id= item.Id }) |
                        @Html.ActionLink("Detalles", "Detalles", new { id = item.Id }) |
                        @Html.ActionLink("Borrar", "Borrar", new {  id= item.Id})
                    </td>
                </tr>
        }
    </tbody>
</table>
</div>

@section scripts {
   
<script type="text/javascript" src="~/js/initDatatables.js">
</script>
<script>
    init();
</script>
}


