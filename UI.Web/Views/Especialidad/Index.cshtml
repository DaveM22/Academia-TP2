@model IEnumerable<UI.Web.Models.EspecialidadViewModel>

@{
    ViewData["Title"] = "Index";
}

@{var tuple = ("Especialidades", "Especialidad");}
<partial for="@tuple" name="_HeaderGeneric" />

<div class="container">
<table id="table" class="display responsive nowrap table table-dark table-stripedtable table-dark table-striped" style="width:100%">
    <thead>
        <tr>
            <th hidden></th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td hidden>
                        @Html.HiddenFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td class="text-center">
                      <a class="btn btn-primary btn-sm" title="Editar comisión" asp-action="Editar" asp-route-id="@item.Id"><i class="fa fa-pencil fa-sm" aria-hidden="true"></i></a>
                      <a class="btn btn-danger btn-sm" title="Borrar comisión" asp-action="Borrar" asp-route-id="@item.Id"><i class="fa fa-trash fa-sm" aria-hidden="true"></i></a>
                    </td>
                </tr>
        }
    </tbody>
</table>
</div>

@section scripts {

<script>
           $(document).ready(function() {
            $('#table').DataTable( {
                responsive: true,
                dom: 'Bfrtip',
                columnDefs: [
                    { responsivePriority: 1, targets: 0 },
                    { responsivePriority: 2, targets: 1 },
                    { responsivePriority: 1, targets: 2 }
                ],
                buttons: {
                    buttons: [
                        {
                            extend: 'copy', className: 'btn btn-primary', action: function (e, dt, node, config) {
                                alert('Button activated');
                            }
                        }
                    ]
                },
                scrollCollapse: true,
                scrollY: '300px',
                language: {
                "emptyTable": "No hay especialidades registradas",
                "search": "Buscar",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior"
                    }
                },
                lengthChange: false,
                info: false,
            } );
        } );
</script>
}


