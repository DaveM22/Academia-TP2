@model UI.Web.Models.UsuarioLoginViewModel

@{
    ViewData["Title"] = "Login";
}

@if (TempData.ContainsKey("Error"))
{
    <div class="alert alert-danger text-center mt-4" role="alert">
        @TempData["Error"]
    </div>
}
<div class="row">
    <h1 class="text-center">Ingreso</h1>

    <hr />
    <div class="col-md-4 col-12 col-lg-12">
        <div class="row">
            <div class="col-lg-4" style="background-color:black">
                <form id="form" asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="NombreUsuario" class="form-label col-form-label-sm text-white"></label>
                        <input asp-for="NombreUsuario" class="form-control form-control-sm" />
                        <span asp-validation-for="@Model.NombreUsuario" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Clave" class="form-label col-form-label-sm text-white"></label>
                        <input asp-for="Clave" class="form-control form-control-sm" />
                        <span asp-validation-for="@Model.Clave" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6 col-lg-12">
                            <input type="submit" value="Ingresar" class="btn btn-primary  w-100 mb-3" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-8 order-sm-first" style="background-color:white">
                
             
                    <img alt="utn_logo" class="rounded mx-auto d-block img-fluid" style="height:22em; !important;" src="~/utn.png" />
       

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
