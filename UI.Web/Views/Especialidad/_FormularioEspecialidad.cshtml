@model UI.Web.Models.EspecialidadViewModel

@{
    var accion = Model.Id == 0 ? "Nuevo" : "Editar"; 
}

<h3 class="text-center">@accion especialidad</h3>
<hr />
<div class="row">
    <div class="col-md-4 col-12 col-lg-6 mx-auto">
        <form asp-action="@accion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label col-form-label-lg"></label>
                <input asp-for="Descripcion" class="form-control form-control-sm form-control-md form-control-lg" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6 col-lg-6">
                    <input type="submit" value="@accion" class="btn btn-success w-100 mb-3" />
                </div>
                <div class="col-md-6 col-lg-6">
                    <a asp-action="Index" class="btn btn-danger w-100 mb-3">Cancelar</a>
                </div>
                   
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}