@model IEnumerable<UI.Web.Models.AlumnoInscripcionViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="row mt-4">
    <div class="col-lg-12">
        <div><h2 class="text-center">Estado academico</h2></div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center text-md-left p-2">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al inicio</a>
        </div>
    </div>
</div>
<div class="container-fluid">
    <table id="table" class="table table-striped  nowrap " style="width:100%;">
        <thead class="thead-dark">
            <tr>
                <th>
                    Materia
                </th>
                <th>
                    Condicion
                </th>
                <th class="text-center">
                    Nota
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-wrap">
                        @Html.DisplayFor(modelItem => item.Curso.Materia.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Condicion)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Nota)
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>



@section scripts {
    <script>
        $(document).ready(function () {
            let table = new DataTable('#table', {
                "aoColumnDefs": [
                    { "bSortable": false, "aTargets": [1] }
                ],
                language: {
                    "emptyTable": "No hay catedras inscriptas por el alumno",
                    "search": "Buscar: ",
                    "zeroRecords": "No se han encontrado catedras en la busqueda",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                },
                responsive: true,
                pageLength: 5,
                lengthChange: false,
                info: false,
            });
        });
    </script>
}
