@model UI.Web.Models.CursoViewModel

@{
    ViewData["Title"] = "Borrar";
}


@if (TempData.ContainsKey("Error"))
{
    <div class="alert alert-danger" role="alert">
        @TempData["Error"]
    </div>
}

<div class="card bg-secondary p-2">
    <h1 class="text-center">Borrar curso</h1>

    <h3 class="text-center">¿Esta seguro de borrar el siguiente curso?</h3>
<div>
    <hr />
    <form asp-action="Borrar">

   <div class="row">
                <div class="col-md-8 col-12 col-lg-4 mx-auto">
                    <dl>
                        <dt class="form-label">
                            @Html.DisplayNameFor(model => model.Materia)
                        </dt>
                        <dd class="form-control">
                            @Html.DisplayFor(model => model.Materia.Descripcion)
                        </dd>
                        <dt class="form-label">
                            @Html.DisplayNameFor(model => model.Comision)
                        </dt>
                        <dd class="form-control">
                            @Html.DisplayFor(model => model.Comision.Descripcion)
                        </dd>
                        <dt class="form-label">
                            @Html.DisplayNameFor(model => model.AnioCalendario)
                        </dt>
                        <dd class="form-control">
                            @Html.DisplayFor(model => model.AnioCalendario)
                        </dd>
                        <dt class="form-label">
                            @Html.DisplayNameFor(model => model.Cupo)
                        </dt>
                        <dd class="form-control">
                            @Html.DisplayFor(model => model.Cupo)
                        </dd>
                    </dl>

                    <div class="row">
                        <div class="col-md-6 col-lg-6">
                            <input type="submit" value="Borrar" class="btn btn-success w-100 mb-3" />
                        </div>
                        <div class="col-md-6 col-lg-6">
                            <a class="btn btn-danger  w-100 mb-3" asp-action="Index">Volver a cursos</a>
                        </div>

                    </div>
                </div>


    </form>
</div>
</div>
